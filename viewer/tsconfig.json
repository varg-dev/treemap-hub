{
    "compileOnSave": false,
    "compilerOptions": {
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "Node",
        "emitDeclarationOnly": true, // Vite handles transpiling, so tsc should emit declaration files only
        "isolatedModules": true,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationDir": "dist/typings",
        "types": ["vite/client", "@webgpu/types"]
    },
    "include": ["source/**/*"]
}
