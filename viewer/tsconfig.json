{
    "compileOnSave": false,
    "compilerOptions": {
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["dom"],
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "Node",
        "noEmit": true, // Vite handles transpiling, so tsc shouldn't emit files
        "isolatedModules": true,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationDir": "dist/typings",
        "types": ["vite/client", "@webgpu/types"]
    },
    "exclude": ["node_modules", "tests", "dist"]
}
