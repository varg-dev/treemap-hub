{
    "compileOnSave": false,
    "compilerOptions": {
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": false,
        "lib": [
            // "dom",
            // "es2016" // important for ie11 support
        ],
        "target": "es6",
        "module": "commonjs",
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "sourceMap": true
        //"strictNullChecks": true
    },
    "exclude": [
        "node_modules",
        "tests"
    ]
}
