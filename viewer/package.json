{
    "name": "treemap-2d",
    "repository": "https://github.com/varg-dev/treemap-hub/viewer",
    "description": "Treemap 2D Rendering Library",
    "version": "0.0.0",
    "license": "MIT",
    "author": "Visual Analytics Research Group",
    "contributors": [
        {
            "name": "Daniel Limberger",
            "email": "github@varg.dev"
        }
    ],
    "files": [
        "dist"
    ],
    "main": "./dist/treemap-2d.cjs.js",
    "module": "./dist/treemap-2d.es.js",
    "exports": {
        ".": {
            "import": "./dist/treemap-2d.es.js",
            "require": "./dist/treemap-2d.cjs.js"
        }
    },
    "devDependencies": {
        "@types/gl-matrix": "^3.2.0",
        "@types/jasmine": "^3.7.2",
        "@types/node": "^15.12.4",
        "@typescript-eslint/eslint-plugin": "^4.23.0",
        "@typescript-eslint/parser": "^4.23.0",
        "@webgpu/glslang": "^0.0.15",
        "@webgpu/types": "^0.1.3",
        "eslint": "^7.26.0",
        "gl-matrix": "^3.3.0",
        "istanbul-instrumenter-loader": "^3.0.1",
        "jasmine-core": "^3.7.1",
        "karma": "^6.3.2",
        "karma-chrome-launcher": "^3.1.0",
        "karma-coverage": "^2.0.3",
        "karma-es6-shim": "^1.0.0",
        "karma-jasmine": "^4.0.1",
        "karma-junit-reporter": "^2.0.1",
        "karma-sourcemap-loader": "^0.3.8",
        "karma-webpack": "^5.0.0",
        "prettier": "~2.3.0",
        "puppeteer": "^9.1.1",
        "typedoc": "^0.20.36",
        "typescript": "^4.2.4",
        "vite": "^2.3.7"
    },
    "scripts": {
        "start": "vite",
        "prestart": "npm run compile-shaders",
        "build": "tsc && vite build",
        "prebuild": "npm run compile-shaders",
        "build-min": "tsc && vite build --mode minified",
        "lint": "eslint source/**  --ext .ts,.tsx --color --format stylish --resolve-plugins-relative-to .",
        "deploy": "npm run lint && npm run test && npm run build && npm run build-min && npm run doc",
        "doc": "typedoc --hideGenerator --readme README.md --module commonjs --mode file --out dist/doc/ source/",
        "test": "karma start karma.default.js",
        "test:watch": "karma start karma.watch-and-debug.js",
        "compile-shaders": "node ./scripts/compile-shaders.js"
    }
}
